{
  "name": "git-training-portal",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "description": "Git Training Portal for Git, GitLab, and GitHub Desktop",
  "homepage": "https://kevinarauz.github.io/",
  "scripts": {
    "deploy": "gh-pages -d build",
    "dev": "vite",
    "dev:stable": "vite --config vite.config.stable.ts",
    "dev:static": "vite --config vite.config.static.ts",
    "dev:no-refresh": "vite build && vite preview",
    "build": "tsc -b && vite build",
    "lint": "eslint .",
    "preview": "vite preview",
    "test": "echo \"No tests specified\" && exit 0"
  },
  "dependencies": {
    "@types/node": "^24.0.12",
    "autoprefixer": "^10.4.21",
    "lucide-react": "^0.525.0",
    "postcss": "^8.5.6",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "tailwindcss": "^3.4.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.30.1",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@vitejs/plugin-react": "^4.6.0",
    "eslint": "^9.30.1",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "gh-pages": "^6.3.0",
    "globals": "^16.3.0",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.35.1",
    "vite": "^5.0.0"
  }
