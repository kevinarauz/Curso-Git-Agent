{
  "name": "git-training-portal",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "description": "Portal interactivo para aprender Git, GitLab y GitHub Desktop con teoría, ejercicios prácticos y gamificación",
  "keywords": ["git", "gitlab", "github", "education", "training", "react", "typescript", "vite"],
  "author": "Kevin Arauz",
  "repository": {
    "type": "git",
    "url": "https://github.com/kevinarauz/Curso-Git-Agent.git"
  },
  "bugs": {
    "url": "https://github.com/kevinarauz/Curso-Git-Agent/issues"
  },
  "homepage": "https://github.com/kevinarauz/Curso-Git-Agent#readme",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "scripts": {
    "dev": "vite",
    "dev:stable": "vite --config vite.config.stable.ts",
    "dev:static": "vite --config vite.config.static.ts",
    "dev:no-refresh": "vite build && vite preview",
    "build": "tsc -b && vite build",
    "build:analyze": "npm run build && npx vite-bundle-analyzer dist/assets/*.js",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "type-check": "tsc --noEmit",
    "preview": "vite preview",
    "clean": "rm -rf dist node_modules/.vite",
    "check-deps": "npm audit && npm outdated",
    "format": "prettier --write .",
    "validate": "npm run type-check && npm run lint && npm run build"
  },
  "dependencies": {
    "@types/node": "^24.0.12",
    "autoprefixer": "^10.4.21",
    "lucide-react": "^0.525.0",
    "postcss": "^8.5.6",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "tailwindcss": "^3.4.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.30.1",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@vitejs/plugin-react": "^4.6.0",
    "eslint": "^9.30.1",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "globals": "^16.3.0",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.35.1",
    "vite": "^5.0.0"
  }
}
